apiVersion: v1
kind: Namespace
metadata:
  name: reactodouis-ns
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: reactodouis-app-deployment
  namespace: reactodouis-ns
spec:
  replicas: 2
  selector:
    matchLabels:
      app.kubernetes.io/name: reactodouis-app
  template:
    metadata:
      labels:
        app.kubernetes.io/name: reactodouis-app
    spec:
      containers:
        - name: reactodouis-app
          image: aksclsuterregistry.azurecr.io/reactodouis:latest
          ports:
            - containerPort: 80
          resources:
            requests:
              memory: "128Mi"
              cpu: "250m"
            limits:
              memory: "256Mi"
              cpu: "500m"
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: reactodouis-ingress
  namespace: reactodouis-ns
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
    - http:
        paths:
        - path: /
          pathType: Prefix
          backend:
            service:
              name: reactodouis-app-service
              port:
                number: 80

---
apiVersion: v1
kind: Service
metadata:
  name: reactodouis-app-service
  namespace: reactodouis-ns
spec:
  type: LoadBalancer
  selector:
    app.kubernetes.io/name: reactodouis-app
  ports:
    - port: 80
      targetPort: 80
